<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/public/css/styles.css" />
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
{{>header}}
 {{#each cakes}}
 
 <img
        
        style="width: 400px; height:400px"
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
        data-val="{{this.name}}"
        data-val1="{{this.description}}"
        data-val2="{{this.price}}"
        data-val3="{{this.categories}}"
        src="{{this.image}}"
      />
        
      
        
        
            {{/each}}
      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel" ></h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <img id="image_model" style="width:300px;height:250px" src="" />
              <div id="cake_description"></div>
              <div id="cake_price"></div>
              <div id="cake_categories"></div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Close</button>
              <button type="button" class="btn btn-primary">Add Cake</button>
            </div>
          </div>
        </div>
      </div>
  
  
    
{{>footer}}
  <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
      <script>
  $(document).ready(function () {
     $('img').on('click', function () {
        var image = $(this).attr('src');
         $('#exampleModal').show('show.bs.modal', function () {
        $("#image_model").attr("src", image);
           
           });
        });
   });
</script>

 
      <script>
  $(document).on("click",".btn.btn-primary",function(){
    var cakeName=$(this).data("val")
   var cakeDescription=$(this).data("val1")
   var cakePrice=$(this).data("val2")
   var cakeCategories=$(this).data("val3")
 
    $("#exampleModalLabel").html(cakeName)
   $("#cake_description").html(cakeDescription)
   $("#cake_price").html(cakePrice)
   $("#cake_categories").html(cakeCategories)
  })
 
 </script>
 
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>       

